{
    "manifest_version": 2,

    "name": "Packet Guard",
    "description": "Making web surfing more private by controlling things to reveal to the website.",
    "version": "0.5",
    "author": "Tan Kim Chye",
    "minimum_chrome_version": "31.0",
    "homepage_url": "https://github.com/im-tkc/Packet-Guard",
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "icons": {
        "48": "ico/packetGuard48.png",
        "128": "ico/packetGuard128.png" 
    },
    "browser_action": {
        "default_icon": "ico/packetGuard48.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "js/resources.js",
            "js/strings.js",
            "js/inputHelper.js",
            "js/rulesSetHelper.js",
            "js/ruleObject.js",
            "js/firstRun.js", 
            "js/cookieCleaner.js",
            "js/cleanCache.js",
            "js/httpReferer.js",
            "js/etag.js",
            "js/userAgent.js",
            "js/httpRequestHeader.js",
            "js/tabsRecorder.js",
            "js/main.js"
        ],
        "persistent": true
    },
    "permissions": [
        "browsingData",
        "tabs", "*://*/*",
        "cookies", "*://*/*",
        "alarms",
        "webRequest", "webRequestBlocking", "*://*/*",
        "downloads"
    ]
}
